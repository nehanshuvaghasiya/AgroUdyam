# Environment Variables for AgroUdyam Frontend

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_APP_NAME=AgroUdyam
NEXT_PUBLIC_APP_VERSION=1.0.0

# Authentication
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret
NEXT_PUBLIC_REFRESH_TOKEN_KEY=refreshToken
NEXT_PUBLIC_ACCESS_TOKEN_KEY=accessToken

# External Services
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3000/admin
NEXT_PUBLIC_FARMER_URL=http://localhost:3000/farmer
NEXT_PUBLIC_CUSTOMER_URL=http://localhost:3000/customer

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=false

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=12
NEXT_PUBLIC_MAX_PAGE_SIZE=50

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Maps (if using Google Maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Analytics (if enabled)
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id
